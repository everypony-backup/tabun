.profile
  min-height 48px
  margin-bottom 0
  padding 0 0 10px 0
  position relative
  .button
    float right
    margin-left 7px
  .avatar
    position absolute
    top 0
    left 0
  .vote-label
    text-transform lowercase
    text-align center
    font-size 12px
    color #999
  .vote-profile
    float right
    margin-left 10px
    .vote-topic
      float none
  .strength
    float right
    margin-left 18px
    .count
      font-size 18px
      line-height 1em
      text-align center
      padding 0 10px
      color #628fa5
  .user-login
    width 240px
    font-size 27px
    line-height 26px
    font-weight normal
    margin-bottom 5px
  .user-name
    color #949aa1
    font-size 17px

.profile-page-header
  font-size 12px
  font-weight bold
  margin-bottom 20px
  background #f5f5f5
  border-top 1px solid #eee
  color #555
  padding 5px 10px 6px

.profile-info-about
  padding 0 20px 0 105px
  min-height 100px
  margin-bottom 10px
  color #000
  position relative
  .avatar
    position absolute
    top 4px
    left 0
    border-radius 5px
    background #fff
    padding 5px
    border 1px solid #aaa
    img
      vertical-align top
      width 80px
      height 80px
  h3
    font-size 19px
    margin-bottom 5px
  .edit
    font-size 11px

.profile-left
  float left
  width 100%

.profile-right
  float left
  clear left
  width 100%

.profile-dotted-list
  margin-bottom 20px
  li
    overflow hidden
    margin-bottom 5px
    background url(images/dots.png) 0 14px repeat-x
    span
      background #fff
    strong
      float right
      width 80%
      font-weight normal
      background #fff

.profile-contact-list
  margin-bottom 50px
  li
    margin-bottom 5px
    padding-left 21px
    position relative
    i
      position absolute
      top 2px
      left 0

// Profile settings
.avatar-change
  display flex
  flex-direction column
  float right
  .avatar
    width 100px
    border-radius 5px
    margin-bottom 10px
    background #fff
    padding 5px
    box-shadow 0 0 5px rgba(0,0,0,.2)
  label
    color #727a90
    border-color #727a90
